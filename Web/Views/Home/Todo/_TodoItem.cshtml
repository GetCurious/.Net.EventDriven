@using dotnet.EventDriven.Constant.Models

@model Todo

@if (Model != null)
{
    var status = Model.IsCompleted ? "Done" : "WIP";
    <tr id="todo-@Model.Id" hx-get="@Url.Action("EditTodo", new {id = Model.Id})" hx-trigger="dblclick" hx-swap="outerHTML">
        <td>@Model.Title</td>
        <td>@status</td>
        <td>
            <span hx-delete="@Url.Action("DeleteTodo", new {id = Model.Id})" hx-target="closest tr" hx-trigger="click"
                hx-swap="delete" class="text-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg"
                    viewBox="0 0 16 16">
                    <path
                        d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                </svg>
            </span>
        </td>
    </tr>
}
